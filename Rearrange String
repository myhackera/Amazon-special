from collections import Counter
from heapq import *
class Solution :
    def rearrangeString(self, str):
        
        c = Counter(str)
        maxheap = [[-cnt, char] for char,cnt in c.items()]
        heapify(maxheap)
        
        prev = None
        res = ""
        
        while maxheap or prev:
            
            if prev and not maxheap:
                return ""
            
            cnt, char = heappop(maxheap)
            res += char
            cnt += 1 
            
            if prev:
                heappush(maxheap, prev)
                prev = None
            if cnt != 0:
                prev = [cnt, char]
        
        return res
